*
  margin 0
  padding 0
  outline none
  -webkit-appearance none

body
  font-family 'Open Sans', Arial, Verdana, sans-serif
  font-style normal
  font-weight normal
  font-size 14px
  color #050038

button
  cursor pointer
  border none
  background none
  font-family 'Open Sans', Arial, Verdana, sans-serif

.layout
  box-sizing border-box
  display flex
  flex-direction column
  width 100%
  height 100vh
  padding: 24px 0

  @media only screen and (max-width: 767px) {
    padding: 0
  }

.form
  width 540px
  max-width 100%
  margin auto
  background #FFFFFF
  box-shadow 0 8px 20px rgba(0, 0, 0, 0.2)
  border-radius 8px

  @media only screen and (max-width: 767px) {
    width 100%
    display flex
    flex-direction column
    overflow hidden
    height 100%
    box-shadow none
  }

.formTop
  background #F8F8F7
  padding 32px 50px 24px 50px
  @media only screen and (max-width: 767px) {
    flex-basis 100%
    overflow auto
    padding 20px
  }

.formBottom
  padding 24px 50px 32px 50px
  display flex
  flex-wrap wrap
  margin-left -16px
  margin-top -8px

  @media only screen and (max-width: 767px) {
    flex-shrink 0
    padding 20px
  }

.formButton
  background #4262FF
  border-radius 6px
  padding 8px 16px
  color: #FFF
  line-height 24px
  margin-left 16px
  margin-top 8px
  transition background .15s ease;
  &:hover
    background darken(#4262FF, 20%)

  @media only screen and (max-width: 767px) {
    flex-grow 1
  }

.formTitle
  font-size 20px
  line-height 27px
  margin-bottom 24px

.emailInput
  background #FFFFFF
  border 1px solid #C3C2CF
  box-sizing border-box
  border-radius 4px
  padding 8px

.emailInputList
  display flex
  flex-wrap wrap
  margin-left -8px
  margin-top -4px
  margin-bottom 8px

.emailInputListItem
  font-size 14px
  line-height 24px
  margin-left 8px
  margin-top 4px
  position relative
  overflow hidden
  text-overflow ellipsis

  &.isValid
    background rgba(102, 153, 255, 0.2)
    border-radius 100px
    padding: 0 8px
    padding-right 24px

  &.isInvalid
    border-bottom 1px dashed #D92929
    padding-right 16px

    .emailInputListItemRemove
      right -8px

  &.isPlaceholder
    cursor pointer
    color #C3C2CF

.emailInputListItemRemove
  position absolute
  top 0
  right 0
  cursor pointer
  width 24px
  height 24px
  padding 0
  margin 0
  border none
  background none

  &:hover svg
    transform scale(0.8)

  svg
    transition transform .15s ease;
    width 8px
    height 8px

.emailInputInput
  font-family 'Open Sans', Arial, Verdana, sans-serif
  border none
  height 24px
  width 100%