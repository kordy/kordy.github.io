$fontFamily = 'Open Sans', Arial, Verdana, sans-serif;
$mediaMobile = 'only screen and (max-width: 767px)'

$mainTextColor = #050038;

$smallIndent = 8px
$bigIndent = 24px

hover()
  @media (hover: none)
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    transition none
    &:active
      {block}

  @media (hover: hover), all and (-ms-high-contrast: none), (-ms-high-contrast: active)
    &:hover
      {block}

transition()
  $value = ''
  for argument in arguments
    if ($value)
      $value += ','
    $value += argument .15s ease
  transition unquote($value)
